{
	"name": "my-app",
	"version": "0.1.0",
	"private": true,
	"author": {
		"name": "F. Timmer",
		"email": "ftimmer@uos.de",
		"url": ""
	},
	"build": {
		"appId": "555-Nase",
		"productName": "MyApp",
		"copyright": "Copyright Â© 2019 ${author}",
		"win": {
			"target": "nsis"
		},
		"files": [
			"build/**/*",
			"node_modules/**/*"
		],
		"directories": {
			"buildResources": "assets"
		}
	},
	"dependencies": {
		"electron-is-dev": "^1.1.0",
		"react": "^16.11.0",
		"react-dom": "^16.11.0",
		"react-scripts": "3.2.0"
	},
	"homepage": "./",
	"main": "public/electron.js",
	"scripts": {
		"start": "rescripts start",
		"build": "rescripts build",
		"test": "rescripts test",
		"eject": "react-scripts eject",
		"electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
		"postinstall": "electron-builder install-app-deps",
		"preelectron-pack": "yarn build",
		"electron-pack": "electron-builder build --dir"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"devDependencies": {
		"@rescripts/cli": "^0.0.13",
		"@rescripts/rescript-env": "^0.0.11",
		"concurrently": "^5.0.0",
		"electron": "^11.5.0",
		"electron-builder": "^22.1.0",
		"typescript": "^3.6.4",
		"wait-on": "^3.3.0"
	}
}
